// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "tabs": {
    "show_diagnostics": "errors",
    "activate_on_close": "neighbour",
    "git_status": true
  },
  "title_bar": {
    "show_sign_in": false,
    "show_user_picture": false,
    "show_onboarding_banner": false,
    "show_branch_icon": true
  },
  "debugger": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "notification_panel": {
    "dock": "left"
  },
  "seed_search_query_from_cursor": "selection",
  "search": {
    "include_ignored": true
  },
  "icon_theme": "Catppuccin Latte",
  "format_on_save": "off",
  "use_on_type_format": true,
  "disable_ai": false,
  "edit_predictions": {
    "mode": "subtle"
  },
  "ui_font_family": "CaskaydiaMono Nerd Font",
  "buffer_line_height": "comfortable",
  "buffer_font_family": "CaskaydiaMono Nerd Font Mono",
  "terminal": {
    "font_size": 15.0,
    "font_family": "CaskaydiaMono Nerd Font Mono"
  },
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "theme": "Cyberdream dark",
  "experimental.theme_overrides": {
    "background.appearance": "transparent",
    "background": "#16181a4c",
    "editor.background": "#0000007f",
    "editor.active_line.background": "#0000004c",
    "editor.gutter.background": "#0000007f",
    "terminal.background": "#00000000",
    "panel.background": "#0000007f",
    "tab_bar.background": "#0000004c",
    "tab.active_background": "#0000007f",
    "tab.inactive_background": "#0000004c",
    "toolbar.background": "#0000007f",
    "status_bar.background": "#000000b2",
    "title_bar.background": "#000000b2"
  }
}
